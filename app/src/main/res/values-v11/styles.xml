<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 11 theme customizations can go here. -->
    </style>


    <!-- Activity them -->
    <style name="ActivityTheme"  parent="@android:style/Theme.Holo">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:actionBarStyle">@style/TranslucentDarkActionBar</item>
    </style>
    
    <style name="TranslucentDarkActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/actionbar_transparent</item>
        <item name="android:displayOptions">useLogo|showHome</item>
    </style>
    
</resources>
